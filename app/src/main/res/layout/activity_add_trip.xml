<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUp_Activity"
    android:background="@color/white"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/back_btn"
                app:tint="#5400E8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organize a Trip"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginTop="26dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:autofillHints="Number"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/sign_corner"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="26dp"
                android:textColor="#414141"
                android:textColorHint="#8E8E8E"
                android:textSize="20sp"
                android:hint="Name"
                android:inputType="text" />
            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:autofillHints="Number"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/sign_corner"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="26dp"
                android:textColor="#414141"
                android:textColorHint="#8E8E8E"
                android:textSize="20sp"
                android:hint="Age"
                android:inputType="number" />

            <EditText
                android:id="@+id/etContact"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:autofillHints="Number"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/sign_corner"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="26dp"
                android:textColor="#414141"
                android:textColorHint="#8E8E8E"
                android:textSize="20sp"
                android:hint="Contact No."
                android:inputType="number" />
            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:autofillHints="Address"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/sign_corner"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="26dp"
                android:textColor="#414141"
                android:textColorHint="#8E8E8E"
                android:textSize="20sp"
                android:hint="Address"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/tourLocation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:autofillHints="Pin Code"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/sign_corner"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="26dp"
                android:textColor="#414141"
                android:textColorHint="#8E8E8E"
                android:textSize="20sp"
                android:hint="Tour Location"
                android:inputType="number" />
            <EditText
                android:id="@+id/budget"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:autofillHints="Pin Code"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/sign_corner"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="26dp"
                android:textColor="#414141"
                android:textColorHint="#8E8E8E"
                android:textSize="20sp"
                android:hint="Estimated Budget"
                android:inputType="number" />
            <EditText
                android:id="@+id/people"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:autofillHints="Pin Code"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/sign_corner"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="26dp"
                android:textColor="#414141"
                android:textColorHint="#8E8E8E"
                android:textSize="20sp"
                android:hint="Number of People"
                android:inputType="number" />
            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/sign_corner"
                android:paddingHorizontal="8dp"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="20dp"
                android:inputType="textImeMultiLine"
                android:textColor="#414141"
                android:textSize="20sp"
                android:hint="Description Of Trip"
                android:singleLine="false"
                android:textColorHint="#8E8E8E"
                android:autofillHints="Description" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/startdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_25ssp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/calendar_drawable"
                    android:drawableTop="@drawable/calendar"
                    android:hint="Start Date"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:textColorHint="#555353"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_25ssp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/calendar_drawable"
                    android:drawableTop="@drawable/calendar"
                    android:hint="end Date"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:textColorHint="#555353"
                    android:textStyle="bold" />



            </LinearLayout>



            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="22dp"
                android:text="Organize"
                android:layout_marginBottom="40dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/sign_btn"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>