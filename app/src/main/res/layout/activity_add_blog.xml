<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddBlogActivity"
    android:background="@color/white"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/back_btn"
                app:tint="#5400E8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a Blog"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginTop="26dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:autofillHints="Name"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/sign_corner"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="26dp"
                android:textColor="#414141"
                android:textColorHint="#8E8E8E"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:text="Name"/>


            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:autofillHints="Address"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/sign_corner"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="26dp"
                android:textColor="#414141"
                android:textColorHint="#8E8E8E"
                android:textSize="20sp"
                android:hint="Location"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/sign_corner"
                android:paddingHorizontal="8dp"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="20dp"
                android:inputType="textImeMultiLine"
                android:textColor="#414141"
                android:textSize="20sp"
                android:hint="Blog"
                android:singleLine="false"
                android:textColorHint="#8E8E8E"
                android:autofillHints="Description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:paddingHorizontal="28dp"
                android:text="Image"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivID"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"

                android:src="@drawable/upload_id"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginHorizontal="22dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/checkbox"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="I accept"/>

                <TextView
                    android:id="@+id/tvLogIn"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Terms &amp; Condition"
                    android:layout_marginStart="4dp"
                    android:textColor="#750AD3"
                    android:textSize="15sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="22dp"
                android:text="Register"
                android:layout_marginBottom="40dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/sign_btn"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>